<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dim10dp"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginBottom="@dimen/dim5dp"
        android:layout_marginTop="@dimen/dim5dp"
        app:cardCornerRadius="@dimen/dim10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llimage"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/image_bg">

                <ImageView
                    android:id="@+id/imgevn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="true"
                    android:alpha="20"
                    android:background="@drawable/image_bg"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_img" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/image_bg_layout_one"></FrameLayout>

                <TextView
                    android:id="@+id/txt_cat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim10dp"
                    android:layout_marginTop="@dimen/dim10dp"
                    android:background="@drawable/cat_bg_layout_two"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingLeft="@dimen/dim10dp"
                    android:paddingRight="@dimen/dim10dp"
                    android:text="@string/loading"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/smallText" />

            </RelativeLayout>

        </LinearLayout>

       <!-- <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dim10dp"
            android:orientation="vertical">-->

            <TextView
                android:id="@+id/txttitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:maxLines="3"
                android:layout_marginBottom="@dimen/dim20dp"
                android:layout_gravity="bottom"
                android:text="@string/loading"
                android:textColor="@color/blackcolor"
                android:textSize="@dimen/secondaryText" />

            <TextView
                android:id="@+id/texttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/time_small_white"
                android:drawablePadding="5dp"
                android:layout_gravity="bottom"
                android:drawableTint="@color/white_color"
                android:fontFamily="@font/poppins_regular"
                android:gravity="bottom|end"
                android:text="@string/loading"
                android:layout_marginBottom="@dimen/dim5dp"
                android:textColor="@color/graycolor_light"
                android:textSize="@dimen/exsmallText" />

       <!-- </LinearLayout>-->
    </androidx.cardview.widget.CardView>

</LinearLayout>
